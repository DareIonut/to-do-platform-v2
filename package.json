{
  "name": "todo-platform",
  "version": "2.0.0",
  "type": "module",
  "description": "Personal Project In order to test MERN skills",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "view": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run view\"",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1"
  }
}
